@using Microsoft.AspNetCore.Identity
@inject UserManager<BoothackForum.Data.ApplicationUser> UserManager
@inject SignInManager<BoothackForum.Data.ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BoothackForum</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@100&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"rel="stylesheet">
</head>
<body id="mainBody">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand navLogo" asp-controller="Home" asp-action="Index"></a>
                </div>
                <div class="navbar-collapse collapse ">
                    @*<partial name="_LoginPartial" />*@
                    <ul class="nav navbar-nav flex-grow-1">
                        <li>
                            <a class="nav-link text-dark" asp-controller="Forum" asp-action="Index">Forums</a>
                        </li>
                        @if(SignInManager.IsSignedIn(User)){
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                Settings
                            </a>
                            <span class="caret"></span>
                            <ul>
                                <li role="separator" class="divider"></li>
                                <li class="dropdown-header">Profile</li>
                                <li><a asp-controller="Profile" asp-action="Detail">My Profile</a></li>
                                @if (User.IsInRole("Admin"))
                                {
                                    <li role="separator" class="divider"></li>
                                    <li class="dropdown-header">Admin</li>
                                    <li><a class="nav-link text-dark" asp-controller="Forum" asp-action="Create">Create Forum</a></li>
                                    <li><a class="nav-link text-dark" asp-controller="Profile" asp-action="Index">View Users</a></li>
                                }
                            </ul>

                        </li>
                        }
                    </ul>

                    @if (!SignInManager.IsSignedIn(User))
                    {
                        <ul class="nav nav-bar navbar-right">
                            <li class="nav-item">
                                <a class="nav-link text-dark"  asp-controller="Account" asp-action="Login">Sign In</a>
                            </li>
                            <li class="active nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        </ul>
                    }
                    else
                    {
                    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
                        <ul class="nav nav-bar navbar-right">
                            <li>Hello @UserManager.GetUserName(User)</li>
                            <li class="nav-item"><a asp-controller="Account" asp-action="Logout">Sign Out</a></li>                        
                        </ul>
                    </form>
                        
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container" id="test">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
