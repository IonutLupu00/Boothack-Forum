@using Microsoft.AspNetCore.Identity

@model BoothackForum.Models.ApplicationUserModel.ProfileModel

@inject UserManager<BoothackForum.Data.ApplicationUser> UserManager

<div class="body-content">

    <div class="row sectionHeader">
        <div class="sectionHeading">
            User Profile
        </div>
        @if (User.IsInRole("Admin"))
        {
            //TODO: Deactivate User button
        }
    </div>
    <div class="row userProfile">
        <div class="col-md-4">
            <div class="userProfileImage" style="background-image:url(@Model.ProfileImageURL)"></div>
            @if (User.Identity.Name == Model.UserName)
            {
                <form method="post" enctype="multipart/form-data" asp-controller="Profile" asp-action="UploadProfileImage" >
                    <div class="form-group" id="upload">
                        
                        <label class="btn btn-default btn-file" asp-for="ImageUpload">
                            Browse Image <input asp-for="ImageUpload" type="file" name="ImageUpload" style="display:none" />
                        </label>
                        
                    </div>
                    
                    <button type="submit" id="btn-profile" class="btn btn-default">
                        Submit
                    </button>
                </form>
            }
        </div>
        <div class="col-md-8 profileDescription">
            <span id="userName">@Model.UserName</span>
            @if (Model.IsAdmin)
            {
                <span class="isAdmin">Admin</span>
            }
            <span id="userRating">Current Rating: @Model.UserRating</span>
            <span id="userEmailLabel">Email: @Model.Email</span>
            <span id="userCreatedLabel">Member Since: @Model.MemberSince</span>
        </div>
    </div>
</div>